{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": ".",
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "ES2022",
    "target": "ES2022",
    "pretty": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
